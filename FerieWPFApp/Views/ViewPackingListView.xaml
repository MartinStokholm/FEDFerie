<Window x:Class="FerieWPFApp.Views.ViewPackingListView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FerieWPFApp.Views"
        mc:Ignorable="d"
        Title="ViewPackingList" Height="800" Width="400">
    <Grid>

        <DataGrid ItemsSource="{Binding CurrentItems}"
                  AutoGenerateColumns="False"
                  CanUserAddRows="False">

            <DataGrid.Columns>

                <DataGridTemplateColumn Header="Packed?">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <CheckBox IsChecked="{Binding IsSelected, UpdateSourceTrigger=PropertyChanged}" />
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <DataGridTextColumn Header="Item" Binding="{Binding Name}"/>
                <DataGridTextColumn Header="Quantity" Binding="{Binding Quantity}"/>

            </DataGrid.Columns>
        </DataGrid>

    </Grid>
</Window>
