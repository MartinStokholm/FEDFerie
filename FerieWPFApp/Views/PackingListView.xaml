<Window x:Class="FerieWPFApp.Views.PackingListView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FerieWPFApp.Views"
        mc:Ignorable="d"
        Title="{Binding Title}" Height="800" Width="400">
    <StackPanel>
        <WrapPanel>
            <Label Content="Name: " />
            <TextBox Text="{Binding CurrentPackingList.Name}" />
        </WrapPanel>
        
        <DataGrid ItemsSource="{Binding CurrentItems}"
                  AutoGenerateColumns="False"
                  CanUserAddRows="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Name" Binding="{Binding Name}"/>
                <DataGridTextColumn Header="Quantity" Binding="{Binding Quantity}"/>

                <DataGridTemplateColumn Header="Packed?">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <CheckBox IsChecked="{Binding IsPacked, UpdateSourceTrigger=PropertyChanged}" />
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>


            </DataGrid.Columns>
        </DataGrid>

    </StackPanel>
</Window>
